        function addtabs(title, url) {
            if ($("#tabs").tabs('exists', title)) {
                $("#tabs").tabs('select', title)
            }
            else {
                $("#tabs").tabs('add', {
                    title: title,
                    content: '<iframe src="' + url + '" style="width:100%;height:100%; border:0;margin:5px"></iframe>',
                    closable: true
                })
            }
        }
    </script>
</head>
